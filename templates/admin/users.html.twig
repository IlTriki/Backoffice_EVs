{% extends 'base.html.twig' %}

{% block title %}Users Management{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Users Management</h1>
        <a href="{{ path('admin_user_new') }}" class="bg-[#23c686] hover:bg-[#1ea16d] text-white font-bold py-2 px-4 rounded">
            New User
        </a>
    </div>

    {% for message in app.flashes('success') %}
        <div class="bg-green-100 dark:bg-green-900 border border-[#23c686] text-[#23c686] dark:text-[#57f7b7] px-4 py-3 rounded mb-4">
            {{ message }}
        </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div class="bg-red-100 dark:bg-red-900 border border-red-400 text-red-700 dark:text-red-300 px-4 py-3 rounded mb-4">
            {{ message }}
        </div>
    {% endfor %}

    <div class="overflow-x-auto">
        <table class="min-w-full bg-white dark:bg-gray-800">
            <thead>
                <tr class="bg-gray-100 dark:bg-gray-700">
                    <th class="px-6 py-3 text-left text-gray-900 dark:text-gray-100">Email</th>
                    <th class="px-6 py-3 text-left text-gray-900 dark:text-gray-100">First Name</th>
                    <th class="px-6 py-3 text-left text-gray-900 dark:text-gray-100">Last Name</th>
                    <th class="px-6 py-3 text-left text-gray-900 dark:text-gray-100">Roles</th>
                    <th class="px-6 py-3 text-left text-gray-900 dark:text-gray-100">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr class="border-b dark:border-gray-600">
                        <td class="px-6 py-4 text-gray-900 dark:text-gray-100">{{ user.email }}</td>
                        <td class="px-6 py-4 text-gray-900 dark:text-gray-100">{{ user.firstName }}</td>
                        <td class="px-6 py-4 text-gray-900 dark:text-gray-100">{{ user.lastName }}</td>
                        <td class="px-6 py-4 text-gray-900 dark:text-gray-100">{{ user.roles|join(', ') }}</td>
                        <td class="px-6 py-4">
                            {% if not ('ROLE_ADMIN' in user.roles) or app.user == user %}
                                <a href="{{ path('admin_user_edit', {id: user.id}) }}" 
                                   class="text-[#23c686] hover:text-[#5cf1b5] dark:text-[#23c686] dark:hover:text-[#5cf1b5] mr-2">Edit</a>
                                <a href="{{ path('admin_user_delete', {id: user.id}) }}" 
                                   class="text-red-600 hover:text-red-800 dark:text-red-400 dark:hover:text-red-300"
                                   onclick="return confirm('Are you sure you want to delete this user?')">Delete</a>
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %} 