{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-6 text-gray-900 dark:text-white">{{ title }}</h1>

    {{ form_start(form, {'attr': {'class': 'space-y-6', 'enctype': 'multipart/form-data'}}) }}
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="form-group">
                    {{ form_label(form.name, 'Name', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1'}}) }}
                    {{ form_widget(form.name, {'attr': {
                        'class': 'w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-800 dark:text-white focus:ring-2 focus:ring-[#23c686] focus:border-transparent transition duration-200 ease-in-out shadow-sm',
                        'placeholder': 'Enter product name'
                    }}) }}
                    {{ form_errors(form.name, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.price, 'Price', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1'}}) }}
                    {{ form_widget(form.price, {'attr': {
                        'class': 'w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-800 dark:text-white focus:ring-2 focus:ring-[#23c686] focus:border-transparent transition duration-200 ease-in-out shadow-sm',
                        'placeholder': 'Enter price'
                    }}) }}
                    {{ form_errors(form.price, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-6">
                <div class="form-group">
                    {{ form_label(form.brand, 'Brand', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1'}}) }}
                    {{ form_widget(form.brand, {'attr': {
                        'class': 'w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-800 dark:text-white focus:ring-2 focus:ring-[#23c686] focus:border-transparent transition duration-200 ease-in-out shadow-sm'
                    }}) }}
                    {{ form_errors(form.brand, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.model, 'Model', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1'}}) }}
                    {{ form_widget(form.model, {'attr': {
                        'class': 'w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-800 dark:text-white focus:ring-2 focus:ring-[#23c686] focus:border-transparent transition duration-200 ease-in-out shadow-sm',
                        'placeholder': 'Enter model'
                    }}) }}
                    {{ form_errors(form.model, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.year, 'Year', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1'}}) }}
                    {{ form_widget(form.year, {'attr': {
                        'class': 'w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-800 dark:text-white focus:ring-2 focus:ring-[#23c686] focus:border-transparent transition duration-200 ease-in-out shadow-sm',
                        'placeholder': 'Enter year'
                    }}) }}
                    {{ form_errors(form.year, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                </div>
            </div>

            <div class="mt-6">
                {{ form_label(form.type, 'Vehicle Type', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1'}}) }}
                {{ form_widget(form.type, {'attr': {
                    'class': 'w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-800 dark:text-white focus:ring-2 focus:ring-[#23c686] focus:border-transparent transition duration-200 ease-in-out shadow-sm'
                }}) }}
                {{ form_errors(form.type, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
            </div>

            <div class="mt-6">
                {{ form_label(form.description, 'Description', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1'}}) }}
                {{ form_widget(form.description, {'attr': {
                    'class': 'w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-800 dark:text-white focus:ring-2 focus:ring-[#23c686] focus:border-transparent transition duration-200 ease-in-out shadow-sm',
                    'rows': 4,
                    'placeholder': 'Enter product description'
                }}) }}
                {{ form_errors(form.description, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
            </div>

            <div class="mt-6">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        {{ form_label(form.imageFile, 'Product Image', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1'}}) }}
                        {{ form_widget(form.imageFile, {'attr': {
                            'class': 'w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-800 dark:text-white focus:ring-2 focus:ring-[#23c686] focus:border-transparent transition duration-200 ease-in-out shadow-sm',
                        }}) }}
                        <small class="text-gray-500 dark:text-gray-400 mt-1 block">Upload a JPEG or PNG image (max 2MB)</small>
                        {{ form_errors(form.imageFile, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                    </div>
                    
                    {% if form.vars.data.imageFilename %}
                        <div class="flex flex-col items-center">
                            <p class="text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Current Image</p>
                            <div class="w-full h-40 flex justify-center items-center border border-gray-300 dark:border-gray-600 rounded-lg overflow-hidden bg-white dark:bg-gray-700">
                                <img src="{{ asset('produits/' ~ form.vars.data.imageFilename) }}" alt="{{ form.vars.data.name }}" class="h-full object-contain">
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="flex justify-end space-x-4 mt-6">
            <a href="{{ path('product_index') }}" class="px-6 py-2.5 rounded-lg bg-gray-200 hover:bg-gray-300 dark:bg-gray-700 dark:hover:bg-gray-600 text-gray-700 dark:text-white font-medium transition duration-200 ease-in-out">
                Cancel
            </a>
            <button type="submit" class="px-6 py-2.5 rounded-lg bg-[#23c686] hover:bg-[#1ea16d] text-white font-medium shadow-sm hover:shadow transition duration-200 ease-in-out">
                Save Product
            </button>
        </div>
    {{ form_end(form) }}
</div>
{% endblock %} 