{% extends 'base.html.twig' %}

{% block title %}Page Not Found{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-16 flex flex-col items-center justify-center">
    <div class="text-center">
        <h1 class="text-9xl font-bold text-[#23c686]">404</h1>
        <h2 class="text-4xl font-bold text-gray-900 dark:text-white mt-4">Page Not Found</h2>
        <p class="text-lg text-gray-600 dark:text-gray-400 mt-4">
            The page you are looking for might have been removed, had its name changed, or is temporarily unavailable.
        </p>
        <div class="mt-8">
            <a href="{{ path('home') }}" class="bg-[#23c686] hover:bg-[#1ea16d] text-white font-bold py-3 px-6 rounded-lg transition duration-200">
                Return to Home
            </a>
        </div>
    </div>
</div>
{% endblock %} 