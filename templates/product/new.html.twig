{% extends 'base.html.twig' %}

{% block title %}New Product{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-6 text-gray-900 dark:text-white">Create New Product</h1>

    {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}
        <div>
            {{ form_label(form.name, 'Name', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300'}}) }}
            {{ form_widget(form.name, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white shadow-sm focus:border-[#23c686] focus:ring-[#23c686] dark:focus:border-[#23c686] dark:focus:ring-[#23c686]'}}) }}
        </div>

        <div>
            {{ form_label(form.description, 'Description', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300'}}) }}
            {{ form_widget(form.description, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white shadow-sm focus:border-[#23c686] focus:ring-[#23c686] dark:focus:border-[#23c686] dark:focus:ring-[#23c686]'}}) }}
        </div>

        <div>
            {{ form_label(form.price, 'Price', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300'}}) }}
            {{ form_widget(form.price, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white shadow-sm focus:border-[#23c686] focus:ring-[#23c686] dark:focus:border-[#23c686] dark:focus:ring-[#23c686]'}}) }}
        </div>

        <div class="flex justify-end space-x-4">
            <a href="{{ path('product_index') }}" class="bg-gray-500 hover:bg-gray-700 dark:bg-gray-600 dark:hover:bg-gray-700 text-white font-bold py-2 px-4 rounded">
                Cancel
            </a>
            <button type="submit" class="bg-[#23c686] hover:bg-[#1ea16d] text-white font-bold py-2 px-4 rounded">
                Create
            </button>
        </div>
    {{ form_end(form) }}
</div>
{% endblock %} 